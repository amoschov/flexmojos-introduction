<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" preinitialize="onPreInit(event)" xmlns:signals="org.osflash.signals.*" xmlns:ns="org.justinjmoses.flexmojos_intro.dependencies.*">
	
	<fx:Script>
		<![CDATA[
			import org.justinjmoses.flexmojos_intro.dependencies.StringSignal;
			import mx.events.FlexEvent;
			
			protected function onClick(event:MouseEvent):void
			{
				stringSignal.dispatch("Santiago, Chile.");
			}
			
			protected function onPreInit(event:FlexEvent):void
			{
				stringSignal.add(function(value:String):void
					{
						label.text = value;
					});
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<ns:StringSignal id="stringSignal" />
		
		<s:Sequence repeatCount="0" id="animation">	
			<s:AnimateColor colorFrom="blue" colorTo="green" duration="5000" />
			<s:AnimateColor colorFrom="green" colorTo="red" duration="5000" />
			<s:AnimateColor colorFrom="red" colorTo="black" duration="5000" />
		</s:Sequence>
	</fx:Declarations>
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" />
	</s:layout>
	<s:Label id="label" text="Where in the world is Carmen Sandiago?" fontSize="22" creationComplete="animation.play([label])" />
	
	<s:Button click="onClick(event)" label="Dispatch" />
</s:Application>
